<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.projectt.aplicativoreceituario">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.RelatorioComissao">
            android:theme="@style/RelatorioTheme" />
        </activity>
        <activity android:name=".activity.InsereReceitaActivity" />
        <activity
            android:name=".activity.ReceitaActivity"
            android:theme="@style/ClienteTheme" />
        <activity
            android:name=".activity.RelatoriosActivity"
            android:theme="@style/RelatorioTheme" />
        <activity
            android:name=".activity.ClientesActivity"
            android:theme="@style/ClienteTheme" />
        <activity
            android:name=".activity.PrincipalActivity"
            android:label="@string/title_activity_principal"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity.CadastroActivity" />
        <activity android:name=".activity.LoginActivity" />
        <activity
            android:name=".activity.MainActivity"
            android:theme="@style/Theme.Intro">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>